<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_filter_action_cancel"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:scaleType="fitStart"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_20dp"
            android:src="@drawable/ic_cross"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_8dp"
            android:background="@drawable/background_rounded_rectangle_stroke"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_4dp"
                android:src="@drawable/ic_done_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_active"
                android:textSize="@dimen/size_13sp"
                android:fontFamily="@font/manrope_extrabold"
                android:text="@string/apply_to_all_pages"/>

        </LinearLayout>
    <ImageView
        android:id="@+id/img_filter_action_done"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:scaleType="fitEnd"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_20dp"
        android:src="@drawable/ic_tick"/>
</LinearLayout>