<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel"/>
        <ImageView
            android:id="@+id/img_font"
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_text"/>
        <ImageView
            android:id="@+id/img_grid"
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grid"/>
        <ImageView
            android:id="@+id/img_flash"
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flash" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/size_12dp"
        android:src="@drawable/img_camera_placeholder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:layout_weight="0.3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_28dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_gallery"
                android:layout_width="@dimen/size_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gallery" />
            <ImageView
                android:id="@+id/img_capture"
                android:layout_width="@dimen/size_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_capture_picture" />
            <ImageView
                android:id="@+id/img_quality"
                android:layout_width="@dimen/size_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/image_photo_selection_placeholder" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="end"
            style="@style/tv_scan_screen_active"
            android:layout_marginEnd="@dimen/size_12dp"
            android:text="@string/next"/>
        <ImageView
            android:id="@+id/img_next"
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_arrow"
            android:layout_marginEnd="@dimen/size_20dp"/>
    </LinearLayout>
</LinearLayout>